// ==UserScript==
// @name         Click en CapÃ­tulo Siguiente con Flecha Derecha
// @namespace    http://tampermonkey.net/
// @version      1.3
// @description  Presiona la tecla â†’ para hacer clic en el botÃ³n de capÃ­tulo siguiente correctamente.
// @author       GPT
// @match        *://*/*
// @grant        none
// ==/UserScript==

(function() {
    'use strict';

    // FunciÃ³n para encontrar el div objetivo
    function findNextChapterButton() {
        return document.querySelector('.col-6.col-sm-2.order-2.order-sm-3.chapter-arrow.chapter-next');
    }

    // Evento para detectar la tecla â†’
    document.addEventListener('keydown', function(event) {
        if (event.key === 'ArrowRight') {
            let nextChapterButton = findNextChapterButton();
            if (nextChapterButton) {
                let link = nextChapterButton.querySelector('a'); // Buscar el <a> dentro del div
                if (link) {
                    window.location.href = link.href; // Redirigir a la URL del enlace
                    console.log("âœ” Redirigiendo a:", link.href);
                } else {
                    console.log("âš  No se encontrÃ³ el enlace dentro del div.");
                }
            } else {
                console.log("âš  No se encontrÃ³ el div.");
            }
        }
    });

    console.log("ðŸ”„ Script cargado y esperando la tecla â†’.");
})();
